            android:name="it.polito.travelguide.app.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".activities.PlacesActivity"
            android:label="@string/app_name"/>
        
        <activity android:name="it.polito.travelguide.app.activities.PlaceDetailsActivity"
            android:label="@string/app_name"/>
        
        <activity android:name="it.polito.travelguide.app.activities.MapActivity"
            android:theme="@android:style/Theme.NoTitleBar"/>

        <activity android:name="it.polito.travelguide.app.activities.TestActivity"
            android:label="@string/app_name"/>

